{
  "watch": [
    "app.js",
    "routes/",
    "controllers/",
    "models/",
    "middleware/",
    "config/",
    "utils/"
  ],
  "ignore": [
    "node_modules/",
    "uploads/",
    "logs/",
    "*.log",
    "*.md",
    ".git/",
    ".env*",
    "swagger.yaml",
    "README.md"
  ],
  "ext": "js,json",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "1000",
  "verbose": true
}